	<schema version="0.2.10.3">
		
		<!-- legacy table to be dropped in a future revision -->
		<security_group charset="latin1">
			<gid_number type="integer" unsigned="true" primary="true" autoinc="true" />
			<gid type="string" length="60" notnull="true" />
			<unique_id type="string" length="55" notnull="true" />
			<display_name type="string" length="320" />
			<description type="string" length="512" />
			<enabled type="bool" notnull="true">true</enabled>
		</security_group>
		
		<!-- legacy table to be dropped in a future revision -->
		<security_group_member charset="latin1">
			<group_guid type="string" length="55" primary="true" />
			<member_guid type="string" length="55" primary="true" />
			<member_is_group type="bool" notnull="true">false</member_is_group>
		</security_group_member>
		
		<security_guid charset="latin1">
			<guid type="string" length="60" primary="true" />
				<!-- a unique_id generated by the security object for each unique account or role -->
			<type type="string" length="5" notnull="true" />
				<!-- type is one of [ user | group | role ] -->
			<accounts_guid type="tinyblob" length="255" notnull="true" />
			  <!-- accounts_guid is either the role_id or guid provided by the accounts module -->
			<module_id type="integer" unsigned="true" />
			  <!-- the security_module id -->
		</security_guid>
		
		<security_module charset="latin1">
			<id type="integer" unsigned="true" primary="true" autoinc="true" />
			<name type="string" length="50" notnull="true" />
			  <!-- the module name -->
			<uuid type="string" length="255" notnull="true" />
			  <!-- the uuid provided by the accounts module *after configuration* -->
			<enabled type="bool" notnull="true">true</enabled>
			  <!-- this field allows instances to be configured but disabled -->
			<order type="integer" notnull="true">0</order>
			  <!-- with implicit authentication this defines the check order -->
			<authentication type="bool" notnull="true">true</authentication>
			  <!-- true or false, use this module for authentication to the system
			       if false, the module can still be used to get or set permissions or
			       to manage users and groups, but clients can not log in to the system
			       with it -->
			<auth_standard type="bool" notnull="true">true</auth_standard>
			  <!-- true or false, use standard user id/password authentication
			       if false, the module has its own auth mechanism using the function
			       login($option), where option is:
			         'select': output the selection text
			         'login': output the actual login form or redirect
			       -->
			<instance_name type="string" length="50" />
			  <!-- client facing name for this configured module instance -->
			<instance_alias type="string" length="20" />
			  <!-- client facing alias for this configured module instance -->
			<instance_description type="string" length="255" />
			  <!-- client provided description for this configured module instance -->
			<instance_of type="string" length="255" />
			  <!-- the base module uuid this module is an instance of -->
			<instance_settings type="clob" length="65535" />
			  <!-- serialized, encoded settings array for this instance -->
		</security_module>
		
		<security_permission charset="latin1">
			<item type="string" length="254" primary="true" />
			<guid type="string" length="60" primary="true" />
		</security_permission>
		
		<security_role charset="latin1">
			<id type="integer" unsigned="true" primary="true" autoinc="true" />
			<name type="string" length="50" notnull="true" unique="true" />
			<description type="string" length="512" />
		</security_role>
		
		<security_role_member charset="latin1">
			<role_id type="integer" unsigned="true" primary="true" />
			  <!-- the security_role id -->
			<guid type="string" length="60" primary="true" />
			  <!-- the security_guid, which in turn maps back to another role or unique account -->
		</security_role_member>
		
		<security_session charset="latin1">
			<session_id type="string" length="128" primary="true" />
			<session_data type="clob" length="65535" notnull="true" />
			<expires type="integer" notnull="true">0</expires>
		</security_session>
		
		<!-- legacy table to be dropped in a future revision -->
		<security_user charset="latin1">
			<uid_number type="integer" unsigned="true" primary="true" autoinc="true" />
			<uid type="string" length="60" notnull="true" />
			<unique_id type="string" length="55" notnull="true" />
			<password type="string" length="254" />
			<pw_last_set type="datetime" />
			<first type="string" length="128" />
			<middle type="string" length="64" />
			<last type="string" length="128" />
			<display_name type="string" length="320" />
			<email type="string" length="254" />
			<phone type="string" length="24" />
			<mobile type="string" length="24" />
			<pager type="string" length="24" />
			<web_url type="string" length="254" />
			<description type="string" length="512" />
			<office type="string" length="64" />
			<address type="string" length="64" />
			<city type="string" length="64" />
			<state type="string" length="2" />
			<zip type="string" length="10" />
			<country type="string" length="64" />
			<enabled type="bool" notnull="true">true</enabled>
		</security_user>
	
	</schema>
	
